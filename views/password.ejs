<%- include('partials/header.ejs') %>

<div class="form-container">
    <h2>Enter Password to View Account</h2>
    <p>Please enter the password to access details for Account #<%= accountNumber %>.</p>
    
    <% if (error) { %>
        <p class="error-message"><%= error %></p>
    <% } %>

    <form action="/verify-password/<%= accountNumber %>" method="POST">
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required autofocus>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <a href="/" class="back-link">‚Üê Cancel and Go Back</a>
</div>

<%- include('partials/footer.ejs') %>