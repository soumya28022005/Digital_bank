<%- include('partials/header.ejs') %>
    <div class="container">
        <div class="page-header">
            <h1><%= title %></h1>
        </div>

        <div class="form-container">
            <p><%= message %></p>
            
            <% if (typeof accountData !== 'undefined' && accountData) { %>
                <div class="card" style="margin-bottom: 2rem; max-width: 400px;">
                    <div class="card-header">
                        <div>
                            <div class="account-type"><%= accountData.accountType %></div>
                            <div class="account-number">Account #<%= accountData.accountNumber %></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <h3><%= accountData.accountHolderName %></h3>
                        <p class="balance-label">Current Balance</p>
                        <p class="balance">â‚¹<%= accountData.balance.toFixed(2) %></p>
                    </div>
                </div>
                <div class="error-message" style="background-color: #f8d7da; color: #721c24; border-color: #f5c6cb;">
                    <strong>Warning:</strong> This action will permanently delete the account and all transaction history. This cannot be undone.
                </div>
            <% } %>

            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>

            <form method="POST" action="<% 
                if (action === 'delete') { %>
                    /verify-delete/<%= accountNumber %><%
                } else if (action === 'create-account') { %>
                    /verify-create-account<%
                } else { %>
                    /verify-password/<%= accountNumber %><%
                } %>">
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                
                <div class="button-group">
                    <% if (action === 'delete') { %>
                        <button type="submit" class="btn btn-danger">Delete Account</button>
                    <% } else if (action === 'create-account') { %>
                        <button type="submit" class="btn btn-primary">Continue to Create Account</button>
                    <% } else { %>
                        <button type="submit" class="btn btn-primary">Access Account</button>
                    <% } %>
                    <a href="/" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
<%- include('partials/footer.ejs') %>