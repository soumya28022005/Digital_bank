<%- include('partials/header.ejs') %>

<div class="form-container">
    <h2>Create a New Bank Account</h2>
    <form action="/create-account" method="POST">
        <div class="form-group">
            <label for="accountHolderName">Account Holder Name</label>
            <input type="text" id="accountHolderName" name="accountHolderName" required>
        </div>
        <div class="form-group">
            <label for="accountType">Account Type</label>
            <select id="accountType" name="accountType">
                <option value="Savings">Savings</option>
                <option value="Current">Current</option>
            </select>
        </div>
        <div class="form-group">
            <label for="initialDeposit">Initial Deposit (optional)</label>
            <input type="number" id="initialDeposit" name="initialDeposit" min="0" step="0.01">
        </div>
        <button type="submit" class="btn btn-primary">Create Account</button>
    </form>
</div>
<a href="/" class="back-link">‚Üê Back to Dashboard</a>

